{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "target": "ES2019",
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.BigInt",
      "ES2020.String"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
